{
  "name": "typescript-minimal-template",
  "version": "1.0.0",
  "description": "Template for backend or frontend use",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start:dev": "npx nodemon",
    "start": "npm run build && node build/index.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "coverage": "npm test -- --coverage --collectCoverageFrom=\"./src/**\"",
    "arch": "npx depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > architecture.svg"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@fast-check/jest": "^1.6.0",
    "@stryker-mutator/core": "^6.4.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "dependency-cruiser": "^12.10.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nodemon": "^2.0.21",
    "onchange": "^7.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.0",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsarch": "^5.3.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "jest-cucumber": "^3.0.1",
    "zod": "^3.21.4"
  }
}
